<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>com.stason.testing.controller.servlets.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/WEB-INF/view/guest/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>student-info</servlet-name>
        <jsp-file>/WEB-INF/view/student/info.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>student-info</servlet-name>
        <url-pattern>/student/info</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/testing</url-pattern>
    </servlet-mapping>


<!--FILTERS-->

    <filter>
        <filter-name>LocaleFilter</filter-name>
        <filter-class>com.stason.testing.controller.filters.LocaleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LocaleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.stason.testing.controller.filters.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>com.stason.testing.controller.filters.RoleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AccessingFilter</filter-name>
        <filter-class>com.stason.testing.controller.filters.AccessingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>BackArrowFilter</filter-name>
        <filter-class>com.stason.testing.controller.filters.BackArrowFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>BackArrowFilter</filter-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/student/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

</web-app>